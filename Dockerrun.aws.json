{
    "AWSEBDockerrunVersion" : 2, 
    "containerDefinitions" : [
        {
            "name": "client", 
            "image": "sergiopichardo/multi-client",
            "hostName": "client",
            "essential": false
        },
        {
            "name": "server", 
            "image": "sergiopichardo/multi-server",
            "hostName": "api",
            "essential": false
        },
        {
            "name": "worker", 
            "image": "sergiopichardo/multi-worker",
            "hostName": "worker",
            "essential": false
        },
        {
            "name": "nginx", 
            "image": "sergiopichardo/multi-nginx",
            "hostName": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links" : ["client", "server"]
        }
    ]  
}